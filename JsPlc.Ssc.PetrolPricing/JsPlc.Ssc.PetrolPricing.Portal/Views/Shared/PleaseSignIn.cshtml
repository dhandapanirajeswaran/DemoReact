@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AccessDenied</title>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h2><i class="fa fa-lock"></i> Access Denied</h2>
                    </div>
                    <div class="panel-body">
                        <p>You are not currently signed into this application</p>
                        <p>Please proceed to the Sign in page or contact the System Administator.</p>
                    </div>
                    <div class="panel-footer text-center">
                        <a class="btn btn-primary" href="@Url.Action("Index", "Home")">Sign in</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
