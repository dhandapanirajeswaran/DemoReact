@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <li>
        <ul class="nav pull-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Account
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        @Html.ActionLink("Manage [" + @User.Identity.GetUserName() + "]", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="/Account/LogOff"><i class="fa fa-power-off"></i> Log off</a>
                    </li>
                </ul>
            </li>
        </ul>
    </li>

}
else
{
    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
