@model JsPlc.Ssc.PetrolPricing.Models.ViewModels.PricePointReportContainerViewModel
@{
    if (!Model.ForDate.HasValue)
    {
        Model.ForDate = DateTime.Now;
    }
    
    var requestedDate = @Model.ForDate.Value.Date.ToString("dd-MMM-yyyy");
}
<div class="report">
    <h2>Report - View Number Of Sites At Each Price Point</h2>

    @using (Html.BeginForm("PricePoints", "PriceReports", FormMethod.Get))
    {
        <div class="form-inline">
            <div class="form-group">
                <label>When:</label>&nbsp;
                <input type="text" class="datepicker form-control" id="For" name="For" value='@requestedDate'>
            </div>
            <input type="button" value="View" class="btn btn-primary" id="btnViewReport" />
        </div>
    }
    
    @if (Model.PricePointReports.Any())
    {
        <br/>
        <!-- EXPORT Button -->
        <div class="row">
            <div class="col-md-12 right">
                <input type="button" id="btnExportReport" value="Export to Excel" />
            </div>
        </div>
        <!-- Report Data -->
    }

    @foreach (var report in Model.PricePointReports)
    {
        <hr />
        <h2>@report.FuelTypeName</h2>

        if (report.PricePointReportRows.Any())
        {
            <table class="table table-hover table-responsive table-striped">
                <thead>
                    <tr>
                        <th>Price (£)</th>
                            @foreach (var brand in report.PricePointReportRows.First().PricePointBrands)
                            {
                                <th>@brand.Name</th>
                            }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in report.PricePointReportRows)
                    {
                        <tr>
                            <td>@(  (row.Price/10).ToString("###0.0") )</td>
                            @foreach (var brand in row.PricePointBrands)
                            {
                                <td>@brand.Count</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info" role="alert">Sorry, no @report.FuelTypeName fuel data was found on @requestedDate</div>
        }
    }

</div>

@section scripts {
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/PriceReports/pricePoints.js"></script>
}